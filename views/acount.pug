extends ./layout.pug

block content
        script(src='js/main.js')

        form.was-validated(enctype='multipart/form-data' action='creat/convert' method='post'  name = 'creat' )
            
            label.form-label(for="avatar") avarta
            .input-group.mb-3
                input.form-control(type="text"  , name="avatar" required)
            

            label.form-label(for="name") tên truyện
            .input-group.mb-3
                input.form-control(type="text" , name='name' required ) 
                .invalid-feedback
                    |aa
        
            label.form-label( for='otherName') tên khác
            .input-group.mb-3
            
                input.form-control(type="text"  , name='ortherName' required)
        
        

            label.form-label(for="") tác giả
            .input-group.mb-3
            
                input.form-control(type="text" ,  name='author' required)
        
        

            label.form-label(for="") tình trạng
            select.form-select.form-control(aria-label='Default select example' name='status' required)
                option(selected='') Open this select menu
                option(value='1') Đang tiến hành
                option(value='2') Drop
                option(value='3') Hoàn thành

            label.form-label(for="") thể loại
            .input-group.mb-3

                .form-check.form-check-inline
                    input#inlineCheckbox1.form-check-input(type='checkbox' name='Isekai' value='1' )
                    label.form-check-label(for='inlineCheckbox1') Isekai
                .form-check.form-check-inline
                    input#inlineCheckbox2.form-check-input(type='checkbox' name='Action' value='1' )
                    label.form-check-label(for='inlineCheckbox2') Action
            
            label.form-label(for="") category 
            .input-group.mb-3

                select.form-select.form-control(aria-label='Default select example' , name = 'category' required)
                    option(selected='') Open this select menu
                    option(value='1') Truyên tranh
                    option(value='2') Truyện chữ
                    option(value='3') Sách
            
            label.form-label(for="") độ dài
            .input-group.mb-3
            
                input.form-control(type="text" , name='lengthOfWork' required)
    
            label.form-label(for='file') Nội dung review
            .input-group.mb-3
            
                input#file.form-control(type='file' , name='file' required)
                        
            label.form-label(for='button')
            button.btn.btn-primary(type='submit') Submit